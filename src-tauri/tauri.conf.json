{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "百度",
    "version": "0.0.1",
    "identifier": "com.baidu.app",
    "app": {
        "security": {
            "assetProtocol": {
                "enable": true,
                "scope": {
                    "allow": [
                        "$APPDATA/assets/**",
                        "$APPDATA/**",
                        "$DOWNLOAD/*"
                    ]
                }
            },
            "csp": "default-src 'self' 'unsafe-inline' 'unsafe-eval' ipc: http://ipc.localhost; img-src 'self' asset: http://asset.localhost blob: data: http://asset.localhost; font-src 'self' asset: http//localhost data:;"
        }
    },
    "bundle": {
        "active": true,
        "targets": ["deb", "appimage", "nsis", "app", "dmg"],
        "resources": ["./data/*"],
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}
